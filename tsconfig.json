{
    "angularCompilerOptions": {
        "annotationsAs": "static fields",
        "annotateForClosureCompiler": true
    },
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "outDir": "built",
        "declaration": true
    },
    "include": [
        "./src/*.d.ts",
        "./src/app.module.ts",
        "./src/bootstrap.ts"
    ],
    "exclude": [
        "vendor",
        "node_modules",
        "built",
        "dist"
    ]
}